<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="70sp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center_horizontal"
            android:text="Hello Selamat Datang di Pemrograman Mobile MI 2B"
            android:textAlignment="center"
            android:textColor="#FF9800"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btnClickHere"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80sp"
            android:text="Click Here!" />

        <Button
            android:id="@+id/btnPageKedua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu Page 2" />

        <Button
            android:id="@+id/btnPassingData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passing Data" />

        <Button
            android:id="@+id/btnListview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List View" />

        <Button
            android:id="@+id/btnRecycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recycle View Buku" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>